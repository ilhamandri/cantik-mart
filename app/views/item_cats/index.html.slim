.row
  .col
    h5
      | Daftar Sub-Department (#{@dept.name})
  .col.text-right
    a href="#{new_item_cat_path(dept_id: @dept.id)}"
      button.btn.btn-rounded.btn-success type="button" 
        i.fas.fa-plus 
        |   Tambah Sub-Department
br
.container-fluid
  .col-lg-12.col-md-12
    .card.mb-4
      .card-header.white-text.info-color
        h5.font-weight-500.my-1
          | Pencarian
      .card-body
        = form_for :item_cats, url: item_cats_path, method: 'GET' do |form|
          .row
            .col
              input type="text" class="form-control md-form" id="search" name="search" placeholder="Nama Sub Departemen ..."
            .col-12.text-center
              button class="btn btn-rounded btn-primary"
                | Cari
          br
            .col-md-12.text-center.grey-text
              a href="#{item_cats_path(dept_id: @dept.id,format: :pdf)}"
                b
                  | CETAK
.container-fluid
  .col-lg-12.col-md-12
    .card.mb-4
      .card-header.white-text.info-color
        h5.font-weight-500.my-1
          | Data Sub-Department
      .card-body.table-responsive.text-nowrap
        table class="table"
          thead
            th Nama
            th Jumlah Barang
            th Termasuk Perhitungan Poin
            th Aksi
          tbody
            = render partial: 'list', collection: @item_cats, as: :item_cat
        = paginate @item_cats

