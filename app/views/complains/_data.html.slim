.row
  .col
    .alert.alert-primary
        .alert-heading
          | Semua Data #{@title}

  - if buttonAccess "complains", "new"
    .col-2.text-center
      a href="#{transactions_path(from: "complain")}"
        button.btn.btn-success type="button" 
          i.fas.fa-plus 
          | &nbsp Komplain


table class="table"
  thead
    th Invoice
    th Transaksi
    th Toko
    th Tgl. Transaksi
    th Tgl. Retur
    th Total Item
    th 
  tbody
    = render partial: 'list', collection: @complains, as: :retur
.container.pagination.justify-content-center
  = paginate @complains
.text-center
  = page_entries_info @complains
