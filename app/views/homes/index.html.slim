                        - due_date_text = ""
                        - due_date_text += " -"+ due_date.to_s + " jatuh tempo." if due_date > 0
                        button.btn.btn-warning.btn-sm.p-2.mr-0 data-placement="top" data-toggle="tooltip" title=("#{@receivable.count} belum lunas #{due_date_text}") type="button" 
