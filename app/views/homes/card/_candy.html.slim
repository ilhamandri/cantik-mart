- trx_items = TransactionItem.where(item_id: 30331).where("created_at > ? ", DateTime.now.beginning_of_month)
- sell = trx_items.sum(:quantity).to_i
.col-4.pb-2
	.row
		.col-12.pb-2
		  .card.bg-success.text-white
		    .card-body.text-white
		      h5.card-title
		        | <i class="fa fa-cart-plus"></i>&nbsp&nbsp
		        | TOTAL KOIN TERJUAL
		      p.card-text.text-white
		        | #{number_with_delimiter(sell, delimiter: ".")}

- total = 0
- if trx_items.present?
	- total = sell * trx_items.first.item.sell

.col.pb-2
  .card.bg-primary
    .card-body.text-white
      h5.card-title
        | <i class="fa fa-handshake"></i>&nbsp&nbsp
        | PENJUALAN
      .row
      	.col-6
	      p.card-text.text-white.text-right style="font-size: 20px;"
	      	| Total Keseluruhan
      	.col-6
	      p.card-text.text-white.text-right style="font-size: 20px;"
	        | #{number_with_delimiter(total, delimiter: ".")}

	    .col-12
	    	hr
      	.col-6
	      p.card-text.text-white.text-right style="font-size: 20px;"
	      	| Cantik Mart ( 35% )
      	.col-6
	      p.card-text.text-white.text-right style="font-size: 20px;"
	        | #{number_with_delimiter(total * 35 / 100, delimiter: ".")}


      	.col-6
	      p.card-text.text-white.text-right style="font-size: 20px;"
	      	| Candy Dream ( 65% )
      	.col-6
	      p.card-text.text-white.text-right style="font-size: 20px;"
	        | #{number_with_delimiter(total * 65 / 100, delimiter: ".")}