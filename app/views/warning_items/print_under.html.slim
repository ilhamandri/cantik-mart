table style="width: 100%"
  tr colspan="5"
  tr
    th
    th Kode
    th Nama
    th Stok

  - idx = 1
  - @items.each do |inv|
    tr.item-row
      td #{idx}
      td #{inv.item.code}
      td #{inv.item.name}
      td 
      - idx+=1