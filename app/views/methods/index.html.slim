.row
  .col.text-left
    h5
      | Sub-Sistem - #{@methods.first.controller.name.gsub("_", " ").upcase}
br
.container-fluid
  .col-lg-12.col-md-12
    .card-header.white-text.info-color
      h5.font-weight-500.my-1
        - if @search_text.present?
          | #{@search_text}
        - else
          | Pencarian
    .card.mb-4
      .card-body
        = form_for :controller, url: controllers_path, method: 'GET' do |form|
          .col-md-12.text-center
            input type="text" class="form-control md-form" id="search" name="search" placeholder="Cari nama..."         
          .col-md-12.text-center
            button class="btn btn-primary"
              | Cari
.container-fluid
  .col-lg-12.col-md-12
    .card-header.white-text.info-color
        h5.font-weight-500.my-1
          | Data
    .card.mb-4
      .card-body.table-responsive.text-nowrap
        table class="table"
          thead
            th Nama
            th Pengguna
            th Aksi
          tbody
            = render partial: 'list', collection: @methods, as: :method
        .container.pagination.justify-content-center
          = paginate @methods
        .text-center
          = page_entries_info @methods

  

