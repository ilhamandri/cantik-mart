- receive = Receivable.where("to_user=? AND deficiency > 0", @order.supplier.id).group(:to_user).sum(:deficiency).values.first
- max = 0
- if receive.present?
  - max = receive if @pay >= receive
  - max = @pay if @pay <= receive


